generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ItemStatus{
  ON_SALE
  SOLD_OUT
}



model Item {
  id Int @id @default(autoincrement()) 
  name String
  price Int
  description String
  status ItemStatus
  created_at DateTime @default(now()) @db.Timestamp(0)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamp(0)
}